#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>


//ETAPA VALIDAÇÃO DE DADOS.
#define MAX_SIZE 50
   int validarCampo(char campo[]) {
    // Verificar se o campo está em branco
    if (strlen(campo) == 0) {
        return 0;
    }

    // Verificar se o campo contém caracteres inválidos
      for (int i = 0; i < strlen(campo); i++) {
        if (!isalpha(campo[i]) && !isdigit(campo[i]) && campo[i] != ' ' && campo[i] != '-' && campo[i] != '.') {
            return 0;
        }
    }

    return 1;
}

int main() {
    char nome[MAX_SIZE];
    char cep[MAX_SIZE];
    char cpf[MAX_SIZE];

    printf("Digite o nome: ");
    fgets(nome, MAX_SIZE, stdin);
    nome[strcspn(nome, "\n")] = '\0';

    printf("Digite o cep: ");
    fgets(cep, MAX_SIZE, stdin);
    email[strcspn(cep, "\n")] = '\0';

    printf("Digite o cpf: ");
    fgets(cpf, MAX_SIZE, stdin);
    telefone[strcspn(cpf, "\n")] = '\0';

    // Validar campos
    int nomeValido = validarCampo(nome);
    int cepValido = validarCampo(cep);
    int cpfValido = validarCampo(cpf);

    if (nomeValido && cepValido && cpfValido) {
        printf("Campos validos!\n");
    } else {
        printf("Campos invalidos!\n");
        if (!nomeValido) {
            printf("Nome invalido!\n");
        }
        if (!cepValido) {
            printf("cep invalido!\n");
        }
        if (!cpfValido) {
            printf("cpf invalido!\n");
        }
    }


    return 0;
}

